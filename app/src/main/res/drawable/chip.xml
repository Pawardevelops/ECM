<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background color of the Chip -->
            <solid android:color="#E0E0E0"/> <!-- You can change this color to match your design -->

            <!-- Corner radius to make it rounded -->
            <corners android:radius="16dp"/> <!-- Adjust this value for more or less rounding -->

            <!-- Optional stroke (border) -->
            <stroke
                android:width="2dp"
                android:color="#A0A0A0"/> <!-- You can change the border color here -->

            <!-- Optional padding -->
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>

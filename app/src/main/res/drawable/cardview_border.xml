<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the outer stroke/border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill -->
            <stroke
                android:width="2dp"
                android:color="@color/primary" /> <!-- Border color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Define the inner content background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Card background color -->
            <corners android:radius="12dp"/> <!-- Ensure same radius as outer stroke -->
        </shape>
    </item>
</layer-list>

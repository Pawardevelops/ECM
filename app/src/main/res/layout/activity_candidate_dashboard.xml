<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ecmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECM"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/ecmSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Election Commission of Manipal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- GridLayout for Buttons with Images and Text -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_gravity="center">

            <!-- Profile Button -->
            <LinearLayout
                android:id="@+id/profileButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/BorderButton">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Results Button -->
            <LinearLayout
                android:id="@+id/resultsButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/BorderButton">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/result"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Candidates Button -->
            <LinearLayout
                android:id="@+id/candidatesButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/BorderButton">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/candidates"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candidates"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Help Button -->
            <LinearLayout
                android:id="@+id/helpButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/BorderButton">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/help"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

        <!-- Elections Section -->

        <!-- Campaign Management Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/campaignManagementButton"
            style="@style/SolidButton"
            android:text="Campaign Management" />

        <!-- Rules Section -->
        <TextView
            android:id="@+id/rulesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidate Guidelines"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#E3F2FD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Maintain decorum at all times during the campaign."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• No use of offensive language or false claims."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ensure that all campaign materials are accurate."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Comply with all election commission guidelines."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <!-- Additional Guidelines -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Avoid personal attacks on other candidates."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Refrain from disrupting public order during events."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Do not use any external funding for the campaign."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Display a spirit of sportsmanship and integrity."
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

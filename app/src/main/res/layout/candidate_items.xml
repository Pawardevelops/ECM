<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/gray_border_input_fields_card"
    android:padding="12dp">

    <ImageView
        android:id="@+id/candidate_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/vote"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidate Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/candidate_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidate Section"
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:id="@+id/chip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/candidatePercentage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/candidateVotes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <!-- Title and Subtitle -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECM"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Election Commission of Manipal"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Class Title -->
    <TextView
        android:id="@+id/classTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class B"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/subtitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Candidates Heading -->
    <TextView
        android:id="@+id/candidatesHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidates"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/classTitle"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Candidate Cards -->
    <LinearLayout
        android:id="@+id/candidateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidatesHeading"
        android:orientation="vertical"
        android:layout_marginTop="8dp">





    </LinearLayout>

</RelativeLayout>
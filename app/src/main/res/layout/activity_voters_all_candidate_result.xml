<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <!-- Title and Subtitle -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECM"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Election Commission of Manipal"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Class Title -->
    <TextView
        android:id="@+id/classTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class B"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/subtitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Candidates Heading -->
    <TextView
        android:id="@+id/candidatesHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidates"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/classTitle"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Candidate Cards -->
    <LinearLayout
        android:id="@+id/candidateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidatesHeading"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Candidate 1 Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/candidateImage1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="#D3D3D3" />

            <TextView
                android:id="@+id/candidateName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pawar Sachin"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/candidateImage1"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@id/candidateImage1" />

            <TextView
                android:id="@+id/candidateSection1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="section B"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_toEndOf="@id/candidateImage1"
                android:layout_marginStart="16dp"
                android:layout_below="@id/candidateName1" />

            <TextView
                android:id="@+id/candidatePercentage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/candidateImage1" />

            <TextView
                android:id="@+id/candidateVotes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65 votes"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/candidatePercentage1" />

        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>
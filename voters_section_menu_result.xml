<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <!-- Title and Subtitle -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECM"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Election Commission of Manipal"
        android:textSize="16dp"
        android:textColor="#757575"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Results Heading -->
    <TextView
        android:id="@+id/resultsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:id="@+id/classAResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultsHeading"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@color/lightblue"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundRadius="15dp">

        <TextView
            android:id="@+id/classAResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class A - Class Representative"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/classBResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classAResult"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/lightblue"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundRadius="15dp">

        <TextView
            android:id="@+id/classBResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class B - Class Representative"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/classCResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classBResult"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/lightblue"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundRadius="15dp">

        <TextView
            android:id="@+id/classCResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class C - Class Representative"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>
